@model Smart.Admin.Models.Products
@{
    ViewBag.Title = @Model.ProductsName;
    ViewBag.Keywords = @Model.Keywords;
    ViewBag.Description = @Model.Summary;
    ViewBag.About = @Model.About;
    ViewBag.Date = @Model.PublishTime;
}
<!--left开始-->
<div id="left">
    @Html.Partial("Custom/ProductItem")
    @Html.Partial("Custom/ArticleItem")
    <div class="productlist" style="margin-top: 8px;">
        <img src="@Url.Content("../content/images/lxwm.jpg")" width="251" alt="查看更多" />
    </div>
</div>
<!--left结束-->
<!--right开始-->
<div id="right">
    <div id="company">
        <!--tit开始-->
        <div class="tit">
            <div class="titleft">
                产品介绍
            </div>
            <div class="titright" style="margin-top: -7px;">
                <img src="@Url.Content("~/Content/images/more.jpg")" border="0" alt="查看更多" />
            </div>
        </div>
        <!--tit结束-->
        <!--示例内容-->
        <div class="bj">
            <img src="@Url.Content("~/" + Model.ProductsImage)" 
                alt="@Model.ProductsName" 
                border="0" 
                align="right" 
                style="padding: 5px;">
            <span>
                <b>编辑作者：</b>@Model.About
                <b>发布时间：</b>@Model.PublishTime
            </span>
            <p>
                <b>摘要：</b>@Model.Summary
            </p>
            <h2>@Model.ProductsName</h2>
            <p>
                @Model.ProductsContent
            </p>
        </div>
        <!--示例内容结束-->
    </div>
</div>
<!--right结束-->
